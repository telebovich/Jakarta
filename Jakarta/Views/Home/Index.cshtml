		@foreach (var p in Model)
		{
			<article>
			<div class="row">
			<div class="large-9 columns">

			<h3>
				@Html.ActionLink(p.Title, "Index", "Blog", new { id = p.Id }, new { @class= "nocolor" })
			</h3>
			<p>@p.Copy</p>		
			</div>
			<div class="large-3 columns">
				<p>@p.CreationDate.ToLongDateString()</p>
			</div> 
			</div>
			</article>
		}