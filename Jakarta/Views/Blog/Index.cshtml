@model Jakarta.ViewModels.BlogMainPage

@{
	ViewBag.Title = "Blog" + " - Robert Lebovich";
}

<header>
	<div class="row">
		<h1>Most Read</h1>
		@{
			foreach(var item in Model.MostReadItems)
			{
				<article class="medium-4 columns featured_post">
					<h3>@item.Title</h3>
					<img src="@Url.Content(item.Image)" alt="attent" style="width:100%;" />
					<p>
						@item.Copy
					</p>
					<div class="post_meta">
						<span class="lsf-icon" title="calendar">
							@item.PublishDate.ToShortDateString()
						</span>
						<span class="lsf-icon" title="user" style="margin-left:15px;">
							<a href="#">@item.Author</a>
						</span>
						<span class="lsf-icon" title="comment" style="margin-left:15px;">
							<a href="#">@item.CommentsCount</a>
						</span>
					</div>
				</article>
			}
		}
	</div>
</header>
<script type="text/javascript">
	$("#blog").attr("class", "active");
</script>